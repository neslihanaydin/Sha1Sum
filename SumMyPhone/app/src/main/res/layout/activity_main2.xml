<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_btn_ripple"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/sub_btn_ripple"
        android:paddingBottom="5dp"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/loading" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/sub_btn_ripple"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:text="Parametreler alınıyor, Lütfen işlem süresi boyunca USB bağlantısını çıkarmayın."
        android:textAlignment="center"
        android:textColor="#874d9f"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDosyaVerileri"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#e0874d9f"
            android:fontFamily="@font/actor"
            android:scrollbars="vertical"
            android:text=" "
            android:textColor="@color/sub_btn_tick"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>